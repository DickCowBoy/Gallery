<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="11dp"
    android:paddingTop="10dp"
    android:minHeight="@dimen/media_detail_group_height">

    <TextView
        android:id="@+id/media_detail_group_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/media_detail_group_title_text_size" />

    <LinearLayout
        android:id="@+id/media_detail_group_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/media_detail_group_item_to_bottom"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
